<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.amannegi.calculator20.MainActivity">

    <TextView
        android:id="@+id/txtCheck"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:fontFamily="serif"
        android:gravity="end|bottom"
        android:hint="Op"
        android:textColor="#000"
        android:textSize="@dimen/btnTextSize" />

    <TextView
        android:id="@+id/txtOp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:fontFamily="serif"
        android:gravity="end|bottom"
        android:hint="Op"
        android:textColor="#000"
        android:textSize="@dimen/btnTextSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtSign"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:fontFamily="serif"
            android:gravity="end|bottom"
            android:hint="S"
            android:textColor="#000"
            android:textSize="@dimen/btnTextSize" />

        <TextView
            android:id="@+id/txtcalc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="19"
            android:background="#ffffff"
            android:fontFamily="serif"
            android:gravity="end|bottom"
            android:hint="Calc"
            android:textColor="#000"
            android:textSize="@dimen/btnTextSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#d2cece"
            android:orientation="vertical">

            <Button
                android:id="@+id/b7"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:fontFamily="sans-serif-condensed"
                android:text="7"
                android:textColor="@color/btnTextColor"
                android:textSize="@dimen/btnTextSize" />

            <Button
                android:id="@+id/b4"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:fontFamily="sans-serif-condensed"
                android:text="4"
                android:textColor="@color/btnTextColor"
                android:textSize="@dimen/btnTextSize" />

            <Button
                android:id="@+id/b1"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:fontFamily="sans-serif-condensed"
                android:text="1"
                android:textColor="@color/btnTextColor"
                android:textSize="@dimen/btnTextSize" />

            <Button
                android:id="@+id/dot"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:fontFamily="sans-serif-condensed"
                android:text="."
                android:textColor="@color/btnTextColor"
                android:textSize="@dimen/btnTextSize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#d2cece"
            android:orientation="vertical">

            <Button
                android:id="@+id/b8"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:fontFamily="sans-serif-condensed"
                android:text="8"
                android:textColor="@color/btnTextColor"
                android:textSize="@dimen/btnTextSize" />

            <Button
                android:id="@+id/b5"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:fontFamily="sans-serif-condensed"
                android:text="5"
                android:textColor="@color/btnTextColor"
                android:textSize="@dimen/btnTextSize" />

            <Button
                android:id="@+id/b2"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:fontFamily="sans-serif-condensed"
                android:text="2"
                android:textColor="@color/btnTextColor"
                android:textSize="@dimen/btnTextSize" />

            <Button
                android:id="@+id/b0"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:fontFamily="sans-serif-condensed"
                android:text="0"
                android:textColor="@color/btnTextColor"
                android:textSize="@dimen/btnTextSize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#d2cece"
            android:orientation="vertical">

            <Button
                android:id="@+id/b9"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:fontFamily="sans-serif-condensed"
                android:text="9"
                android:textColor="@color/btnTextColor"
                android:textSize="@dimen/btnTextSize" />

            <Button
                android:id="@+id/b6"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:fontFamily="sans-serif-condensed"
                android:text="6"
                android:textColor="@color/btnTextColor"
                android:textSize="@dimen/btnTextSize" />

            <Button
                android:id="@+id/b3"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:fontFamily="sans-serif-condensed"
                android:text="3"
                android:textColor="@color/btnTextColor"
                android:textSize="@dimen/btnTextSize" />

            <Button
                android:id="@+id/equal"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:fontFamily="sans-serif-condensed"
                android:text="="
                android:textColor="@color/btnTextColor"
                android:textSize="@dimen/btnTextSize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#7dd9e7"
            android:orientation="vertical">

            <Button
                android:id="@+id/del"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:fontFamily="sans-serif-condensed"
                android:text="DEL"
                android:textColor="@color/btnTextColor"
                android:textSize="@dimen/btnTextSize" />

            <Button
                android:id="@+id/divide"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:fontFamily="sans-serif-condensed"
                android:text="÷"
                android:textColor="@color/btnTextColor"
                android:textSize="@dimen/btnTextSize" />

            <Button
                android:id="@+id/multiply"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:fontFamily="sans-serif-condensed"
                android:text="×"
                android:textColor="@color/btnTextColor"
                android:textSize="@dimen/btnTextSize" />

            <Button
                android:id="@+id/sub"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:fontFamily="sans-serif-condensed"
                android:text="-"
                android:textColor="@color/btnTextColor"
                android:textSize="@dimen/btnTextSize" />

            <Button
                android:id="@+id/add"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:fontFamily="sans-serif-condensed"
                android:text="+"
                android:textColor="@color/btnTextColor"
                android:textSize="@dimen/btnTextSize" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>